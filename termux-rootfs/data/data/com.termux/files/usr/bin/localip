## This should be an IP from somewhere on the Internet
## Google DNS (8.8.8.8) should be a good choice
PUBLIC_IP="8.8.8.8"

IPADDR=$(ip route get ${PUBLIC_IP} 2>/dev/null | head -1 | awk '{ print $7 }')
if [ ! -z "${IPADDR}" ]; then
    echo "${IPADDR}"
else
    echo "No network." 1>&2
    exit 1
fi
